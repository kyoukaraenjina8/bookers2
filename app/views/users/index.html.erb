<div class="container">
  <div class="row">
  <div class="col-md-3">
    <%= render 'user', user: @user %>
    <div class="btn-group-vertical d-grid gap-2 col-2 mx-auto ">
    <%= link_to edit_user_path(@user) do %><i class="fas fa-user-cog"></i><% end %>
    
    <h1>Newbook</h1>
    <%= form_with model: @book, method: :post do|f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Createbook' %>
    <% end %>
    </div>
  </div>

    <div class="col-lg-8 offset-md-1">
    <h3>Users</h3>
    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
          <th>image</th>
          <th>Opinion</th>
        </tr>
      </thead>
     <% @users.each do |user| %>
    <tbody class="table-group-divider">
    <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
    </tbody>
    <% end %>
    </table>
    </div>
  </div>
</div>