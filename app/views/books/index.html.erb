<h1>画像投稿フォーム</h1>
  <%= form_with model: @book, method: :post do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <% @books.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>投稿者ID：<%= book.user_id %></p>
  <p>タイトル：<%= book.title %></p>
  <p>説明：<%= book.body %></p>
</div>
<% end %>