<table class="table table-striped">
<h3>New book</h3>
  <%= form_with model: @book, method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h3>Books</h3>
  <% @book_images.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p>投稿ユーザー画像：<%= image_tag '/assets/user.jpg' %></p>
  <p>Title：<%= link_to book.title, books_path %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
<</table>