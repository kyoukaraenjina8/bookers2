<h3>New book</h3>
  <%= form_with model: @book, method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <% @books.each do |book| %>
   <tbody class="table-group-divider">

    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= link_to book.title, books_path %></td>
    <td><%= book.body %></td>
    
  </tbody>
  <% end %>
</table>